# Document Management System Environment Configuration
# Place this file in your root directory (same level as server.js)

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Security Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random-at-least-32-chars
BCRYPT_ROUNDS=10

# Database Configuration
DB_PATH=./data/database.sqlite
DB_LOGGING=true

# File Storage Configuration
UPLOAD_DIR=./uploads
IMAGE_DIR=./uploads/images
THUMBNAIL_DIR=./uploads/thumbnails
MAX_FILE_SIZE=52428800

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGIN=*

# OCR Configuration
ENABLE_OCR=true
OCR_DEFAULT_LANGUAGE=eng
OCR_TIMEOUT=60000

# Features
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_SEARCH_INDEXING=true
ENABLE_THUMBNAILS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
VERBOSE_LOGGING=true

# Admin Configuration
ADMIN_EMAIL=admin@localhost
ENABLE_ADMIN_PANEL=true

# Development Configuration
DEBUG_MODE=true
HOT_RELOAD=true

# Performance Configuration
ENABLE_GZIP=true
CACHE_MAX_AGE=86400
REQUEST_TIMEOUT=30000

# Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION=7

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true